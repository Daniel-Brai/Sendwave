<%- include('../partials/header.ejs', { title: title }); %>
  <body>
    <%- include('../partials/navbar.ejs'); %>
    <main class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
      <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <h2 class="mt-10 text-center mb-2 text-2xl font-bold leading-9 tracking-tight text-gray-900">Reset your password</h2>
        <p class="text-sm text-center text-gray-700">We get it, stuff happens. Just enter your details to change your password</p>
      </div>
      <section class="mt-8 sm:mx-auto sm:w-full sm:max-w-sm">
        <div id="message-renderer" class="my-2 mx-auto"></div>      
        <form class="space-y-6" id="reset-password-form" hx-post="/api/v1/users/reset-password" hx-ext="json-enc" hx-trigger="submit" hx-target="#message-renderer">
          <div>
            <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email address</label>
            <div class="mt-2">
              <%- include('../partials/input.ejs', { id: "email", type: "email", placeholder: "", required: "true" }) %>
            </div>
          </div>  
          <div>
            <label for="old_password" class="block text-sm font-medium leading-6 text-gray-900">Old Password</label>
            <div class="mt-2">
              <%- include('../partials/input.ejs', { id: "old_password", type: "password", placeholder: "", required: "true" }) %>
            </div>
          </div>  
          <div>
            <label for="new_password" class="block text-sm font-medium leading-6 text-gray-900">New Password</label>
            <div class="mt-2">
              <%- include('../partials/input.ejs', { id: "new_password", type: "password", placeholder: "", required: "true" }) %>
            </div>
          </div>  
          <div>
            <label for="new_password_confirmation" class="block text-sm font-medium leading-6 text-gray-900">New Password Confirmation</label>
            <div class="mt-2">
              <%- include('../partials/input.ejs', { id: "new_password_confirmation", type: "password", placeholder: "", required: "true" }) %>
            </div>
          </div>  
          <div>
            <button 
              type="submit" 
              class="flex w-full justify-center rounded-md bg-primary-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600">
                Change password
            </button>
          </div>
        </form>
      </section>
    </main>
  </body>
</html>
