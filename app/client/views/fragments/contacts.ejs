<section id="contacts-section" class="relative p-4 sm:w-full mx-auto sm:max-w-3xl h-full md:h-auto">
  <%- include('../partials/dheader.ejs', { title: "Your contacts list", subtitle: "Your personal emailing list for your close contacts" });  %>

<div x-data="{
    contacts: [],
    notFound: null,
    errorMessage: null,
    watch: {
        'contacts': function(value) {
            console.log('Contacts updated:', value);
        }
    },
    fetchContacts: async function() {
        console.log('Fetching contacts...');
        try {
            const response = await fetch('/api/v1/mail/<%= userId %>/contacts');
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            const res = await response.json();
            if(!res.length) {
              this.notFound = 'ðŸ”– No contacts found!';
            } else {
              this.contacts = res;
              console.log('Contacts fetched successfully');
            }
        } catch (error) {
            this.errorMessage = 'ðŸ˜¢ Something went wrong!';
            console.error('Error fetching contacts:', error);
        }
    },
    deleteContact: async function(id, index) {
        try {
            const response = await fetch(`/api/v1/mail/contacts/${id}`, {
                method: 'DELETE',
            });
            if (!response.ok) {
                throw new Error('Error deleting contact');
            }
            // If successful, remove the contact from the list
            this.contacts.splice(index, 1);
        } catch (error) {
            console.error('Error deleting contact:', error);
        }
    }
}" x-init="fetchContacts"> 
      <div class="w-full">
        <div class="mt-4 mb-4 mx-auto flex items-center px-10 py-2 justify-between">
            <div class="bg-white">
                <label for="table-search" class="sr-only">Search</label>
                  <div class="relative mt-1">
                    <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                      <svg class="w-4 h-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                      </svg>
                    </div>
                    <input 
                      type="text" 
                      hx-get="/api/v1/mail/:userId/contacts"
                      hx-trigger="debounce:keyup:300"
                      hx-target="#search-results"
                      id="search-contacts"
                      hx-indicator=".spinner"
                      class="block p-2 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 bg-gray-50 focus:ring-primary-500 focus:border-primary-500" 
                      placeholder="Search for your contacts"
                    >
                  </div>
              </div>
              <div class="flex items-center justify-center">
                <%- include('../partials/contact-modal.ejs'); %>
              </div>
        </div>
        <div x-show="notFound !== null" x-transition>
          <div class="text-lg text-center mt-4 font-normal" x-text="notFound"></div>
        </div>
        <div x-show="errorMessage !== null" x-transition>
          <div id="message-box" class="text-lg text-center mt-4 font-normal" x-text="errorMessage"></div>
        </div>
        <div x-transition>
          <template x-if="contacts.length > 0">
                <template x-for="(contact, index) in contacts" :key="index">
                    <div class="relative flex items-center bg-blue-100 rounded-lg px-2 py-3 mb-4">
                        <div class="flex items-center space-x-2">
                          <div class="bg-gray-100 px-2 py-2 flex items-center justify-center rounded-full"> 
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="fill-gray-200 w-6 h-6">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                            </svg>
                          </div>
                          <div class="ml-4 flex flex-col justify-center space-y-1">
                            <span class="text-gray-500 text-sm" x-text="contact.name"></span>
                            <span class="text-gray-500 text-sm" x-text="contact.email"></span>
                          </div>
                        </div>
                        <button
                            class="absolute top-1 right-1 bg-blue-300 text-white px-1 py-1 rounded-full"
                            title="Delete"
                            @click="deleteContact(contact.id, index)"
                            hx-delete="`/api/v1/mail/contacts/${contact.id}`"
                        >
                            <span>
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                            </span>
                        </button>
                    </div>
                </template>
          </template>
      </div>
    </div>
</div>
</section>
<script src="js/search-contacts.js"></script>
