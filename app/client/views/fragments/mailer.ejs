  <section id="emailing-section" class="relative p-4 sm:w-full mx-auto sm:max-w-3xl h-full md:h-auto">
        <%- include('../partials/dashboard-header.ejs', { title: "Compose an email", subtitle: "Just enter your necessary details below and we'll take over the rest" });  %>
        <div class="relative p-4 bg-white rounded-lg shadow dark:bg-gray-800 sm:p-5">
          <form action="#">
            <div class="grid gap-4 mb-4 sm:grid-cols-2">
              <div>
                <label for="stmp_host" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Host</label>
                <%- include('../partials/input.ejs', {id: "stmp_host", type: "text", placeholder: "smtp.sendgrid.net", required: "true"}) %>
              </div>
              <div>
                <label for="smtp_port" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Port</label>
                <%- include('../partials/input.ejs', {id: "stmp_port", type: "number", placeholder: "28", required: "true"}) %>
              </div>
              <div>
                <label for="smtp_username" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Username</label>
                <%- include('../partials/input.ejs', {id: "stmp_username", type: "text", placeholder: "johndoe", required: "true"}) %>
              </div>
              <div>
                <label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
                <%- include('../partials/input.ejs', {id: "stmp_password", type: "password", placeholder: "******************", required: "true"}) %>
              </div>
            </div>
            <div class="w-full mb-4 border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600">
              <div class="px-4 py-2 bg-white rounded-t-lg dark:bg-gray-800">
                <label for="message" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white sr-only">Your message</label>
                <textarea id="message" rows="4" class="w-full px-0 text-sm text-gray-900 bg-white border-0 dark:bg-gray-800 focus:ring-0 dark:text-white dark:placeholder-gray-400" placeholder="Write a message..." required></textarea>
              </div>
              <div class="flex items-center justify-between px-3 py-2 border-t dark:border-gray-600">
                <div class="flex space-x-2">
                  <button type="submit" class="inline-flex items-center py-2.5 px-4 text-xs font-medium text-center text-white bg-blue-700 rounded-lg focus:ring-4 focus:ring-blue-200 dark:focus:ring-blue-900 hover:bg-blue-800">
                    Send
                  </button>
                  <button class="text-white text-xs inline-flex items-center bg-primary-600 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-4 py-2.5 text-center hover:bg-primary-800">
                    <svg class="mr-1 -ml-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                    </svg>
                    Schedule
                  </button>
                </div>
                <div class="flex pl-0 space-x-1 sm:pl-2">
                  <button class="inline-flex justify-center items-center p-2 text-gray-500 rounded cursor-pointer hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-600">
                   <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 12 20">
                        <path stroke="currentColor" stroke-linejoin="round" stroke-width="2" d="M1 6v8a5 5 0 1 0 10 0V4.5a3.5 3.5 0 1 0-7 0V13a2 2 0 0 0 4 0V6"/>
                    </svg>
                    <span class="sr-only">Attach file</span>
                  </button>
                </div>
              </div>
          </div>
        </form>
      </div>
    </section>
