<button id="createTemplateButton" onclick="document.getElementById('createTemplateModal').showModal()" class="text-white hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm w-fit px-4 lg:px-5 py-2 lg:py-2.5 mr-2 focus:outline-none bg-primary-600">Add template</button>

<div class="flex items-center justify-center">
  <dialog id="createTemplateModal" class="h-1/2 w-11/12 md:w-1/2 p-4 bg-white rounded-md ">
   <div class="flex flex-col w-full h-auto ">
        <div class="flex w-full h-auto justify-between items-center">
            <div class="flex w-full justify-between items-center pb-5 mb-4 rounded-t border-b sm:mb-5">
                <div class="text-lg font-semibold text-gray-900 dark:text-white">
                    Create Template
                </div>
                <div>
                  <button id="modal-btn" type="button" onclick="document.getElementById('createTemplateModal').close();" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center">
                    <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    <span class="sr-only">Close modal</span>
                  </button>
                </div>
            </div>
        </div>
           <div class="h-auto py-5 px-2 justify-center items-center rounded text-center text-gray-500">
            <form id="create-template-form" hx-post="/api/v1/mail/<%= userId %>/templates" hx-ext="json-enc" hx-target="#modal-message" hx-trigger="submit">
                <div id="modal-message"></div>
                <div class="space-y-6">
                    <div class="w-full">
                      <label for="name" class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name</label>
                      <%- include('./input.ejs', {id: "name", type: "text", placeholder: "", required: "true"}) %>
                    </div>
                    <div class="w-full">
                      <label for="content" class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white">Content</label>
                      <%- include('./input.ejs', {id: "content", type: "text", placeholder: "", required: "true"}) %>
                    </div>
                </div>
                <button type="submit" class="flex mt-4 w-full justify-center rounded-md bg-primary-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600">Save</button>
            </form>
          </div>
        </div>
  </dialog>
<script src="js/save-templates.js"></script>
</div>
