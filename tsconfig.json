{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./app/server",
    "baseUrl": "./",
    "paths": {
      "@common/dtos": ["src/common/dtos"],
      "@common/interfaces": ["src/common/interfaces"],
      "@common/types": ["src/common/types"],
      "@pkg/config": ["src/pkg/config"],
      "@pkg/database": ["src/pkg/database"],
      "@pkg/mailer": ["src/pkg/mailer"],
      "@pkg/redis": ["src/pkg/redis"],
      "@pkg/swagger": ["src/pkg/swagger"],
      "@utils/formatters": ["src/utils/formatters"],
      "@utils/generators": ["src/utils/generators"],
      "@utils/helpers": ["src/utils/helpers"],
      "@utils/transformers": ["src/utils/transformers"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  }
}
